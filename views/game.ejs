<!DOCTYPE html>
<html>
  <head>
    <title>ACQUIRE</title>
    <link
      href="https://fonts.googleapis.com/css?family=Raleway"
      rel="stylesheet"
    />
    <link rel="stylesheet" type="text/css" href="/styles/main.css" />
    <script src="/scripts/buy_stocks.js"></script>
    <script src="/scripts/select_corporation.js"></script>
    <script src="/scripts/game.js"></script>
    <script src="/scripts/sell_trade.js"></script>
  </head>

  <body>
    <section class="overlay" style="display:none" id="buy-stocks-overlay">
      <div class="overlay-content">
        <div class="align-content-center">
          <div class="buy-stocks-header" id="buy-stocks-money"></div>
          <div id="error-msg-at-buying" class="error-msg-at-buying"></div>

          <table class="buy-stocks-table">
            <thead>
              <tr>
                <th>Corporation</th>
                <th>Shares</th>
                <th>Price</th>
                <th>Stocks Count</th>
              </tr>
            </thead>
            <tbody id="buy-stocks-body"></tbody>
          </table>

          <button class="btn-default btn-medium buy-btn" id="done-button">
            Buy
          </button>
        </div>
      </div>
    </section>

    <section
      class="overlay"
      style="display:none"
      id="select-corporation-overlay"
    >
      <div class="overlay-content">
        <div class="align-content-center">
          <h2 class="heading-medium" id="popup-heading"></h2>
          <div class="inactive-corporations" id="corporations-container"></div>
        </div>
      </div>
    </section>

    <section
      class="overlay"
      style="display: none"
      id="information-card-overlay"
    >
      <div class="overlay-content" id="information-card-content">
        <img
          class="close-button"
          id="close-information-card"
          src="/images/close-button.png"
          alt="X"
        />
        <div class="info-card">
          <h1 class="heading-medium">
            Corporation Details
          </h1>

          <table>
            <thead>
              <tr>
                <td>
                  <span class="sackson-color">SACKSON</span>
                  <span class="zeta-color">ZETA</span>
                </td>
                <td>
                  <span class="hydra-color">HYDRA</span>
                  <span class="america-color">AMERICA</span>
                  <span class="fusion-color">FUSION</span>
                </td>
                <td>
                  <span class="phoenix-color">PHOENIX</span>
                  <span class="quantum-color">QUANTUM</span>
                </td>
                <td>Stock price/stock card</td>
                <td>Majority stockholder bonus</td>
                <td>Minority stockholder bonus</td>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>2</td>
                <td>-</td>
                <td>-</td>
                <td>200</td>
                <td>2,000</td>
                <td>1,000</td>
              </tr>
              <tr>
                <td>3</td>
                <td>2</td>
                <td>-</td>
                <td>300</td>
                <td>3,000</td>
                <td>1,500</td>
              </tr>
              <tr>
                <td>4</td>
                <td>3</td>
                <td>2</td>
                <td>400</td>
                <td>4,000</td>
                <td>2,000</td>
              </tr>
              <tr>
                <td>5</td>
                <td>4</td>
                <td>3</td>
                <td>500</td>
                <td>5,000</td>
                <td>2,500</td>
              </tr>
              <tr>
                <td>6-10</td>
                <td>5</td>
                <td>4</td>
                <td>600</td>
                <td>6,000</td>
                <td>3,000</td>
              </tr>
              <tr>
                <td>11-20</td>
                <td>6-10</td>
                <td>5</td>
                <td>700</td>
                <td>7,000</td>
                <td>3,500</td>
              </tr>
              <tr>
                <td>21-30</td>
                <td>11-20</td>
                <td>6-10</td>
                <td>800</td>
                <td>8,000</td>
                <td>4,000</td>
              </tr>
              <tr>
                <td>31-40</td>
                <td>21-30</td>
                <td>11-20</td>
                <td>900</td>
                <td>9,000</td>
                <td>4,500</td>
              </tr>
              <tr>
                <td>41 & over</td>
                <td>31-40</td>
                <td>21-30</td>
                <td>1,000</td>
                <td>10,000</td>
                <td>5,000</td>
              </tr>
              <tr>
                <td>-</td>
                <td>41 & over</td>
                <td>31-40</td>
                <td>1,100</td>
                <td>11,000</td>
                <td>5,500</td>
              </tr>
              <tr>
                <td>-</td>
                <td>-</td>
                <td>41 & over</td>
                <td>1,200</td>
                <td>12,000</td>
                <td>6,000</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </section>

    <section class="overlay" style="display:none" id="game-results-overlay">
      <div class="overlay-content">
        <img
          class="close-button"
          id="close-button"
          src="/images/close-button.png"
          alt="X"
        />
        <div class="align-content-center">
          <h2 class="heading-medium">Game Ends!</h2>
          <h4 id="game-end-cause" class="heading-medium"></h4>
          <table class="game-results-table">
            <thead>
              <tr>
                <th>Rank</th>
                <th>Player name</th>
                <th>Money</th>
              </tr>
            </thead>
            <tbody id="game-results-body"></tbody>
          </table>
          <a href="/" class="btn-default btn-medium play-again-btn">
            Play Again
          </a>
        </div>
      </div>
    </section>

    <section class="overlay" style="display:none" id="sell-trade-overlay">
      <div class="overlay-content">
        <img src="/images/merger-img.jpg" alt="merging with" id="merger-img" />
        <div class="align-content-center">
          <div class="sell-trade-header" id="sell-trade-header"></div>
          <div
            id="error-msg-at-sell-trade"
            class="error-msg-at-sell-trade"
          ></div>
          <div>
            <span id="defunct-corp-name"></span>:<span
              id="total-defunct-stocks"
            ></span>
          </div>
          <table class="sell-trade-table">
            <tbody id="sell-trade-body"></tbody>
          </table>
          <button
            class="btn-default btn-medium done-btn"
            id="sell-trade-done-button"
          >
            Done
          </button>
        </div>
      </div>
    </section>

    <header id="game-header" style="display: none">
      <h1 class="app-title">ACQUIRE</h1>
      <div class="name-and-quit-btn">
        <span class="player-name-header" id="player-name"></span>
        <span class="btn-default show-end-popup" id="show-end-popup"
          >Show Ranks</span
        >
      </div>
    </header>

    <main>
      <section class="waiting-area" id="waiting-area">
        <p style="text-align:center;font-size:24px" id="game-id">
          Game Id : <%= gameId %>
        </p>
        <p><%= message %> . . .</p>
        <div
          id="joined-player-names"
          class="joined-player-names"
          style="display:none"
        ></div>
        <img class="img-medium" src="/images/oie_trans.gif" alt="loading" />
      </section>
      <section id="game-container" style="display: none" class="game-container">
        <section class="game-top">
          <div class="status-bar" id="player-log"></div>
          <img
            class="info-icon"
            onclick="showInformationCard()"
            src="/images/information-card-icon.png"
            title="Corporation details"
          />
        </section>
        <section class="game-main">
          <div class="player-names-section">
            <div class="player-names" id="player-names-container"></div>
          </div>
          <div class="game-board-container" id="game-board-container"></div>

          <div class="game-information-container">
            <table class="corporation-details">
              <thead>
                <th>Corporation</th>
                <th>Size</th>
                <th>Price</th>
                <th>Stocks</th>
              </thead>
              <tbody id="corporation-details-body"></tbody>
            </table>
            <div class="activity-log-section">
              <h3 class="heading-medium">Activity Log</h3>
              <ul id="activity-log" class="activity-log"></ul>
            </div>
          </div>
        </section>
        <section class="player-info">
          <div class="money-section flex-column">
            <h2>Money</h2>
            <div class="player-money" id="player-money">$6000</div>
          </div>
          <div class="tiles-section flex-column">
            <h2>Tiles</h2>
            <div
              class="tiles  flex-row-space-evenly"
              id="player-tiles-container"
            ></div>
          </div>
          <div class="stocks-section flex-column">
            <h2>Stocks</h2>
            <div
              class="flex-row-space-evenly"
              id="player-stocks-container"
            ></div>
          </div>
        </section>
      </section>
    </main>
  </body>
</html>
